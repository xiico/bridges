extends ../layouts/default

mixin post(post)
	.col-sm-12.col-md-12
		div.single-blog.single-column
			.post-thumb
				a(href='/blog/post/' + post.slug)
					img(src=post._.image.fit(850,400)).img-responsive
				.post-overlay
					span.uppercase
						a(href='/blog/post/' + post.slug)
							| #{post._.publishedDate.format('D')} 
							br
							small #{post._.publishedDate.format('MMMM')} 
			.post-content.overflow
				h2.post-title.bold
					a(href='/blog/post/' + post.slug)= post.title
				div(data-ks-editable=editable(user, { list: 'Post', id: post.id }))
					h3.post-author
						a(href='/blog/post/' + post.slug) Posted by #{post.author.name.first}
				p!= post.content.brief
				if post.content.extended
					p: a(href='/blog/post/' + post.slug).read-more Read more...
				.post-bottom.overflow
					ul.nav.navbar-nav.post-nav
						li
							a(href='/blog/post/' + post.slug)
								i.fa.fa-heart
								| 32 Love
						li
							a(href='/blog/post/' + post.slug)
								i.fa.fa-comments
								| #{utils.plural(post.comments, '* Comment')}

block intro
	section#page-breadcrumb
		.vertical-center.sun
			.container
				.row
					.action
						.col-sm-12
							h1.title= data.category ? data.category.name : 'Blog'
							p Plenty of Ideas
	// /#page-breadcrumb
block content	
	section#blog.padding-top
		.container
			.row
				.col-md-9.col-sm-7
					.row
						each post in data.posts.results
							+post(post)
					.blog-pagination
						if data.posts.totalPages > 1
							ul.pagination
								if data.posts.previous
									li: a(href='?page=' + data.posts.previous): span.glyphicon.glyphicon-chevron-left
								else
									li.disabled: a(href='?page=' + 1): span.glyphicon.glyphicon-chevron-left
								each p, i in data.posts.pages
									li(class=data.posts.currentPage == p ? 'active' : null)
										a(href='?page=' + (p == '...' ? (i ? data.posts.totalPages : 1) : p ))= p
								if data.posts.next
									li: a(href='?page=' + data.posts.next): span.glyphicon.glyphicon-chevron-right
								else
									li.disabled: a(href='?page=' + data.posts.totalPages): span.entypo.glyphicon.glyphicon-chevron-right
				.col-md-3.col-sm-5
					.sidebar.blog-sidebar
						.sidebar-item.recent
							h3 Comments
							if data.comments && data.comments.length
								each comment in data.comments							
									.media
										.pull-left
											a(href='/blog/post/' + comment.post.slug)
												img(src=comment.author.photo.exists ? comment.author._.photo.thumbnail(52,52) : 'http://placehold.it/52x52', alt=comment.author.name.full, width=52, height=52).img-rounded
										.media-body
											h4
												a(href='/blog/post/' + comment.post.slug)= comment.truncated
											p posted on  #{comment._.publishedOn.format('DD MMMM YYYY')} 
							else
								span No recent comments
						if data.categories.length
							.sidebar-item.categories
								h3 Categories
								ul.nav.navbar-stacked
									li(class=!data.category ? 'active' : false)
										a(href='/blog') All Categories
									each cat in data.categories
										li(class=data.category && data.category.id == cat.id ? 'active' : false)
											a(href='/blog/' + cat.key)= cat.name
												if cat.postCount
													span.pull-right= cat.postCount
						.sidebar-item.tag-cloud
							h3 Tag Cloud
							ul.nav.nav-pills
								li
									a(href='#') Corporate
								li
									a(href='#') Joomla
								li
									a(href='#') Abstract
								li
									a(href='#') Creative
								li
									a(href='#') Business
								li
									a(href='#') Product
						.sidebar-item.popular
							h3 Latest Photos
							ul.gallery
								li
									a(href='#')
										img(src='/images/portfolio/popular1.jpg', alt='')
								li
									a(href='#')
										img(src='/images/portfolio/popular2.jpg', alt='')
								li
									a(href='#')
										img(src='/images/portfolio/popular3.jpg', alt='')
								li
									a(href='#')
										img(src='/images/portfolio/popular4.jpg', alt='')
								li
									a(href='#')
										img(src='/images/portfolio/popular5.jpg', alt='')
								li
									a(href='#')
										img(src='/images/portfolio/popular1.jpg', alt='')
	// /#blog
