mixin post-masonry(post)
    .col-md-3.col-sm-4
      .single-blog.two-column
        .post-thumb
          a(href='/blog/post/' + post.slug)
            img.img-responsive(src=post.imageMasonary.url ? post.imageMasonary.url : post.image.url, alt='', width=262)
          .post-overlay
            span.uppercase
              a(href='#')
                | #{post._.publishedDate.format('D')} 
                br
                small #{post._.publishedDate.format('MMMM')} 
        .post-content.overflow
          ul.nav.nav-justified.post-nav
            li
              a(href='#')
                i.fa.fa-tag
                | Creative
          h2.post-title.bold
            a(href='/blog/post/' + post.slug)= post.title
          h3.post-author
            a(href='/blog/post/' + post.slug) Posted by #{post.author.name.first}		
          | !{post.content.brief}
          a(href='/blog/post/' + post.slug).read-more Read more...
          .post-bottom.overflow
            ul.nav.nav-justified.post-nav
              li
                a(href='#')
                  i.fa.fa-heart
                  | 32 Love
              li
                a(href='#')
                  i.fa.fa-comments
                  | #{utils.plural(post.comments, '* Comment')}